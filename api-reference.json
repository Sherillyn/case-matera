{
  "openapi": "3.0.0",
  "info": {
    "title": "Account Alias API",
    "version": "1.0.0"
  },
  "paths": {
    "/accounts/{account_id}/alias": {
      "post": {
        "summary": "Register an alias for a bank account",
        "parameters": [
          {
            "in": "path",
            "name": "account_id",
            "description": "The ID of the bank account",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "description": "Alias registration request",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AliasRegistrationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Alias registration successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AliasRegistrationResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body"
          },
          "404": {
            "description": "Bank account not found"
          }
        }
      },
      "get": {
        "summary": "Get information about the account alias",
        "parameters": [
          {
            "in": "path",
            "name": "account_id",
            "description": "The ID of the bank account",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Alias information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AliasInformation"
                }
              }
            }
          },
          "404": {
            "description": "Bank account not found"
          }
        }
      },
      "delete": {
        "summary": "Delete the account alias",
        "parameters": [
          {
            "in": "path",
            "name": "account_id",
            "description": "The ID of the bank account",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Alias deleted"
          },
          "404": {
            "description": "Bank account not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AliasRegistrationRequest": {
        "type": "object",
        "properties": {
          "alias_type": {
            "type": "string",
            "enum": ["email", "phone_number", "random"]
          },
          "alias_value": {
            "type": "string"
          }
        },
        "required": ["alias_type"]
      },
      "AliasRegistrationResponse": {
        "type": "object",
        "properties": {
          "alias_id": {
            "type": "integer"
          }
        }
      },
      "AliasInformation": {
        "type": "object",
        "properties": {
          "alias_id": {
            "type": "integer"
          },
          "alias_type": {
            "type": "string",
